/* pages/jizhang/jizhang.wxss */

.smallImage{
	width:20px;
	height:20px;
}

.smallImage10{
	width:10px;
	height:10px;
}

.swipe-item{
	width:100%;
	height:100%;
	display:flex;
	flex-direction:row;
	flex-wrap:wrap;
	background:#fff;
	justify-content:flex-start;
	align-items:center;
}

.card-item{
	width:60px;
	height:50px;
	display:flex;
	flex-direction:column;
	justify-content:center;
	align-items:center;
}

.card-text{
	color:#515151;
	font-size:9pt;
}

.edit-area{
  width:100%;
  height:150px;
  display:flex;
  margin-top:10px;
  background:#fff; 
  flex-direction: column;
}

.edit-area-cell{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width:100%;
  height:40px;
}
.text-center-title{
  color: #868686;
  font-size: 10pt;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.text-center-value{
  color: #D8D8D8;
  font-size: 9pt; 
}

.input-center-value{
  color: #000;
  font-size: 11pt; 
}

.option-area{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 200px;
  margin-top: 20rpx;
}

.button-op{
   width: 90%;
   height: 40px;
   margin-top: 10px; 
   color: #fff;
}

.done{
  background-color: #3D96CD;
}
.again{
  background-color: #fff;
  color: #3D96CD;
}
.delete{
  background: #FF7476
}

.button-hover{
  color: rgba(0, 0,  0,  0.6);
  background-color: #dedede;
}